<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="账号与安全"
        android:textStyle="bold"
        android:gravity="center"/>
    <View android:layout_width="match_parent"
        android:layout_height="3px"
        android:background="#e0e0e0"
        android:layout_marginBottom="20dp"/>
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">
        <TextView android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="密码更改后请用新密码重新登陆"
            android:layout_marginBottom="20dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/change_pass_old"
                android:hint="输入旧密码"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/change_pass_old_sign"
                android:layout_marginRight="5dp"
                android:src="@null"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/change_pass_new"
                android:hint="设置您的新密码"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/change_pass_new_sign"
                android:layout_marginRight="5dp"
                android:src="@null"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/change_pass_affirm"
                android:hint="确认您的新密码"
                android:textSize="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/change_pass_affirm_sign"
                android:layout_marginRight="5dp"
                android:src="@null"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>


        <TextView
            android:gravity="center"
            android:textColor="#ffffff"
            android:text="确认修改"
            android:textStyle="bold"
            android:id="@+id/change_pass_yes"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:background="@drawable/bg_change_pass_yes_disable"/>

        <View android:layout_width="match_parent"
            android:layout_height="50dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/change_pass_error_old"
            android:textColor="#ff0000"
            />
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/change_pass_error_new"
            android:textColor="#ff0000"/>
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/change_pass_error_affirm"
            android:textColor="#ff0000"/>
    </LinearLayout>


</LinearLayout>
