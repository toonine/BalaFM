<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="0dp"
    android:layout_marginHorizontal="10dp">
    <ImageView android:id="@+id/search_channel_icon"
        android:scaleType="fitXY"
        android:layout_height="51dp"
        android:layout_width="70dp"
        android:layout_gravity="center_vertical"/>
    <LinearLayout
        android:layout_marginHorizontal="8dp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/search_channel_name"
            android:text="你有freestyle吗"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/search_channel_onlineListener"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"/>
            <TextView
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="人收听          "/>
            <TextView
                android:id="@+id/search_channel_comment"
                android:textSize="11dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5'35"/>
            <TextView
                android:layout_width="50dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/search_channel_classify"
        android:layout_marginTop="15dp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="3dp"
        android:textSize="10dp"
        android:text="#分类#"
        android:background="@drawable/bg_hot_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
