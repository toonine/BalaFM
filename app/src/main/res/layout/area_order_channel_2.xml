<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">
<LinearLayout
    android:layout_width="164dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/order_channel_channel_icon"
            android:layout_width="match_parent"
            android:layout_height="123dp"
            android:src="@drawable/ic_channel_icon"
            android:scaleType="fitXY" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#99000000"
            android:layout_marginTop="3dp"
            android:paddingHorizontal="5dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_phone"/>
        <TextView
            android:id="@+id/order_channel_onLineListenor"
            android:layout_marginLeft="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="10dp"
            android:text="0"/>
        </LinearLayout>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/order_channel_anchor_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_person_icon"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginLeft="5dp">
            <TextView
                android:textColor="#0f0f0f"
                android:text="直播简介"
                android:textSize="12dp"
                android:id="@+id/order_channel_brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <TextView
                android:textColor="#5eD5f4"
                android:text="#生活"
                android:textSize="10dp"
                android:id="@+id/order_channel_classify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/order_channel_menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:orientation="vertical"
            android:gravity="center">
            <View
                android:layout_width="12dp"
                android:layout_height="2dp"
                android:background="#5f5f5f"/>
            <View
                android:layout_width="12dp"
                android:layout_height="2.5dp"
                android:layout_marginVertical="2dp"
                android:background="#5f5f5f"/>
            <View
                android:layout_width="12dp"
                android:layout_height="3dp"
                android:background="#5f5f5f"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
</android.support.v7.widget.CardView>
</LinearLayout>

